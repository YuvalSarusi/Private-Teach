<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPageTeacher"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:weightSum="10"
    >

    <TextView
        android:id="@+id/teacherHomeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/teacherHomeTitle"
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/teacherAddLesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Lesson"
        android:textSize="20dp"
        android:layout_gravity="right"
        android:backgroundTint="@color/light_blue"
        android:layout_marginBottom="10sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Past Lessons"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                />
            <ListView
                android:id="@+id/teacherFutureLessonList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Future Lessons"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                />
            <ListView
                android:id="@+id/teacherPastLessonList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                />
        </LinearLayout>
    </LinearLayout>




</LinearLayout>